# ===== CONFIGURACIÓN DEL SERVIDOR =====
# Entorno: development, production, test
NODE_ENV=development
# Puerto del servidor backend
PORT=3000

# ===== SEGURIDAD JWT =====
# CRÍTICO: Genera una clave segura con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Debe ser única, secreta y de al menos 64 caracteres
JWT_SECRET=tu_clave_secreta_aqui_cambiar_obligatorio

# ===== CONFIGURACIÓN DE BASE DE DATOS (PostgreSQL) =====
# Para desarrollo local con PostgreSQL instalado:
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_NAME=db_rectificadoraderepuesto
DB_PORT=5432

# Para producción en Railway (usa DATABASE_URL automáticamente):
# DATABASE_URL=postgresql://user:password@host:port/database

# ===== CONFIGURACIÓN DE BCRYPT =====
BCRYPT_ROUNDS=10

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ===== FRONTEND =====
FRONTEND_URL=https://rectificadoraderepuestos.lat

# ===== REDIS (Caché) =====
# Railway configura automáticamente REDIS_URL o REDIS_PRIVATE_URL
# Para desarrollo local:
# REDIS_URL=redis://localhost:6379

# ===== BUCKET (Almacenamiento de imágenes) =====
# Railway configura automáticamente estas variables
# BUCKET_URL=https://tu-bucket.railway.app
# BUCKET_ACCESS_KEY=tu_access_key

# ===== EMAIL (Para reportes automáticos) =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password
EMAIL_FROM="Sistema de Inventario" <noreply@rectificadora.com>
# Email donde se envían los reportes (por defecto usa EMAIL_USER)
ADMIN_EMAIL=admin@rectificadora.com
